<h2 id="new_registration"><%= t :sign_up_registration %></h2>
<div class="row">
  <div class="col-md-6">
    <div class="alert alert-info">
      <%= t :sign_up_info %>
    </div>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
      <%= f.error_notification %>
      <%= display_base_errors resource %>
      <%= f.input :name, :autofocus => true, :required => true, :input_html => { :class => 'form-control' } %>
      <% if params[:locale]=='en' %>
        <div class="form_checkbox">
          <%= f.input :is_foreign, :as => :boolean %>
        </div>
      <% end %>
      <% if params[:locale]!='en' %>
        <div class="form_checkbox">
          <%= f.input :is_antok_member, :as => :boolean %>
        </div>   
        <div id="antok_id_block">
          <%= f.input :antok_id, :input_html => { :class => 'form-control' } %>
          <div class="alert alert-info">
            <p>Тут можно узнать свой АНТОК ID - <a href="/antok_id#antokid" target="_blank">http://my.aksts.ru/antok_id</a></p>
          </div>
        </div>
      <% end %>
      <%= f.input :email, :required => true, :input_html => { :class => 'form-control' } %>
      <%= f.input :password, :required => true, :input_html => { :class => 'form-control' } %>
      <%= f.input :password_confirmation, :required => true, :input_html => { :class => 'form-control' } %>
      <%= f.button :submit, t(:sign_up), :class => 'btn-primary' %>
      <% if params[:locale]!='en' %>
        <br/>
        <br/>
      <% end %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
