<h2>Редактировать аккаунт</h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <%= f.input :name, :autofocus => true %>
  <%= f.input :is_antok_member, :as => :boolean %>
  <%= f.input :email, :required => true %>
  <%= f.input :password, :autocomplete => "off", :hint => "оставьте пустым если не хотите изменять", :required => false %>
  <%= f.input :password_confirmation, :required => false %>
  <%= f.input :current_password, :hint => "нужен текущий пароль, чтобы сохранить изменения", :required => true %>
  <%= f.button :submit, 'Сохранить', :class => 'btn-primary' %>
<% end %>
<h3>Удалить аккаунт</h3>
<p>Несчастны? <%= link_to "Удилить мой аккаунт", registration_path(resource_name), :data => { :confirm => "Вы уверены?" }, :method => :delete %>.</p>
<%= link_to "Назад", :back %>
